    <TableLayout
        android:id="@+id/table_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp">
        <TableRow>
            <TextView
                android:id="@+id/tv_cari_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="Nama Resep"/>

            <EditText
                android:id="@+id/et_cariJudul"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:inputType="text" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/tv_cariLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="Lokasi Resep"/>

            <Spinner
                android:id="@+id/spin_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/tv_cariJenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="Jenis Resep"/>

            <Spinner
                android:id="@+id/spin_jenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/btn_cariResep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:text="Cari"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:layout_below="@id/table_1"/>

</RelativeLayout>